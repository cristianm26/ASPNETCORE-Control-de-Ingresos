@model IEnumerable<ControlIngresoGastos.Models.IngresoGasto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ingresos y Gastos</h1>
<form asp-action="index">
    <div class="form-row">
        <div class="form-group col-md-1">
            <label class="control-label">Mes/Año</label>
        </div>
        <div class="form-group col-md-2" >
            <input type="number" class="form-control text-right" name="mes" min="1" max="12" value="@ViewBag.mes" />
        </div>
        <div class="form-group col-md-2" >
            <input type="number" class="form-control text-right" autocomplete="off" name="anio" value="@ViewBag.anio" />
        </div>
        <div class="form-group col-md-2" >
            <input type="submit" value="Consultar"  class="btn btn-primary" />
        </div>
    </div>
</form>


<p>
    <a asp-action="Create" class="btn btn-success" >Crear Nuevo</a>
</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
              @Html.DisplayNameFor(model => model.Valor)

            </th>
            <th>
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.NombreCategoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @if (item.Categoria.Tipo == "IN")
                {
                    <p class="text-primary">@Html.DisplayFor(modelItem => item.Valor)</p>
                }
                else
                {
                    <p class="text-primary">@Html.DisplayFor(modelItem => item.Valor)</p>
                }
            </td>
            <td>
                <a class="btn btn-primary"  asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detalle</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
